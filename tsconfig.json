{
    "compilerOptions": {
      "target": "ES2015",
      "module": "ESNext",
      "lib": ["DOM", "ESNext"],
      "jsx": "react",
      "declaration": true,
      "declarationDir": "dist",
      "sourceMap": true,
      "outDir": "dist",
      "strict": true,
      "moduleResolution": "node",
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist", "playground", "example"]
  }